<div class="container edit-page">
	<h2>Editing Book</h2>
	<%= form_with model:@book, local: true do |f| %>
		<% if @book.errors.any? %>
  		<div class="alert">
    		<h4>error!</h4>
    		<ul>
      		<% @book.errors.full_messages.each do |message| %>
        		<li><%= message %></li>
      		<% end %>
    		</ul>
  		</div>
  	<% end %>

  	<h4>Title</h4>
  	<%= f.text_field :title %>
  	<h4>Body</h4>
  	<%= f.text_area :body %>
  	<p>
  	<%= f.submit 'Update Book' %>
  	</p>
  <% end %>

  <p>
	<span class="show">
		<%= link_to "Show", book_path(@book.id) %>
	</span>
	<span>|</span>
	<span class="back">
		<%= link_to "Back", books_path %>
	</span>
	</p>
</div>